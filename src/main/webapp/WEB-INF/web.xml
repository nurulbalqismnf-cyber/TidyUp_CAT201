<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>LoginAction</servlet-name>
        <servlet-class>com.tidyup.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginAction</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserBookingServlet</servlet-name>
        <servlet-class>com.tidyup.servlets.UserBookingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserBookingServlet</servlet-name>
        <url-pattern>/UserBookingServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.tidyup.servlets.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReviewServlet</servlet-name>
        <servlet-class>com.tidyup.servlets.ReviewServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ReviewServlet</servlet-name>
        <url-pattern>/submitReview</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>UpdateTaskServlet</servlet-name>
        <servlet-class>com.tidyup.servlets.UpdateTaskServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdateTaskServlet</servlet-name>
        <url-pattern>/UpdateTaskServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServiceServlet</servlet-name>
        <servlet-class>com.tidyup.servlets.ServiceServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServiceServlet</servlet-name>
        <url-pattern>/ServiceServlet</url-pattern>
    </servlet-mapping>

</web-app>
